\ProvidesFile{unibelabel.lco}
\LoadLetterOption{SN}
\KOMAoptions{paper=a5,
	paper=landscape,
	foldmarks=false,
	fromlogo=true,
	addrfield=true,
	backaddress=true}
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{graphicx}
\RequirePackage{lmodern}
\RequirePackage{adjustbox}
\setkomavar{backaddress}{John Doe\\
	University of Bern\\
	Institute of Bogus Scienc\\
	Somewhere 123\\
	CH-3012 Bern}
\setkomavar{fromlogo}{\adjustbox{valign=t}{\includegraphics[width=3cm]{ub_16pt-cmyk}}}
\@setplength{toaddrhpos}{37mm} % set so that the line under *my* name aligns with the ublogo line
\@setplength{toaddrvpos}{68mm} % set so that the underline under the `addrfield` is in the middle of the page
\@setplength{toaddrheight}{67mm} % set so that the (4 line) recipient address is in the lower quarter of the page
\date{}
\endinput
